@{
    Layout = "_AccountLayout";
}

@model Econference.ViewModels.LogInViewModel

@{
    ViewData["Title"] = "User Login";
}

<section id="login-form" class="container p-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center p-2 text-secondary">Sign In</h5>
                    <form asp-action="LogIn" method="post">
                        <div class="mb-3">
                            <label for="userName" class="form-label">Username</label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </form>
                    <div class="mt-3 text-center">
                        <p>Not registered? <a asp-action="Register" class="text-primary">Register here</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
